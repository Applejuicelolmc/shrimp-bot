{
	"name": "shrimp-bot",
	"version": "1.0.0",
	"description": "This is a work in progress personal discord bot that I started as a little side project.",
	"main": "src/index.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/Applejuicelolmc/shrimp-bot"
	},
	"packageManager": "pnpm@8.14.3",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"start": "clear && ts-node -r dotenv/config src/index.ts dotenv_config_path=config/main.env",
		"deploy": "pnpm start deploy",
		"reset": "pnpm start reset",
		"update-avatar": "pnpm start update-avatar",
		"update-commands": "pnpm start update-commands",
		"lint": "eslint . --ext .ts",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 160,
		"bracketSpacing": true,
		"quoteProps": "preserve"
	},
	"eslintConfig": {
		"root": true,
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint",
			"prettier"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"rules": {
			"@typescript-eslint/no-non-null-assertion": "off"
		}
	},
	"author": "Applejuicelolmc",
	"license": "GNU GPL v3",
	"dependencies": {
		"@discordjs/builders": "^1.7.0",
		"@napi-rs/canvas": "^0.1.51",
		"@types/node": "^18.19.29",
		"chalk": "^4.1.2",
		"discord.js": "^14.14.1",
		"dotenv": "^16.4.5",
		"mongodb": "^5.9.2",
		"mongoose": "^7.6.10",
		"mustache": "^4.2.0",
		"ora": "^6.3.1",
		"rss-parser": "^3.13.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.6.2",
		"typescript": "^5.4.3",
		"winston": "^3.13.0"
	},
	"devDependencies": {
		"@types/mustache": "^4.2.5",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "2.8.8"
	}
}
